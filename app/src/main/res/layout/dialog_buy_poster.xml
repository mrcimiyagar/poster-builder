<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:background="@color/colorSaveDialogBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.one.two.three.poster.front.components.CustomTextView
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="@string/buy_confim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/dialog_buy_poster_preview_image_view"
        android:layout_width="270dp"
        android:layout_height="385dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.one.two.three.poster.front.components.CustomTextView
                android:id="@+id/txtSavePoster"
                android:textColor="@color/colorHomePink"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:text="@string/buy_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.one.two.three.poster.front.components.CustomTextView
                android:id="@+id/txtCancelSave"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:text="@string/buy_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>