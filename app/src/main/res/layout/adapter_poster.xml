<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="226dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/imgPosterThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="#6fd2cf" />

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:donut_finished_stroke_width="5dp"
            app:donut_unfinished_stroke_width="2dp"
            app:donut_unfinished_color="@color/colorPrimaryDark"
            app:donut_finished_color="@color/colorAccent"
            app:donut_text_color="@color/colorAccent"
            app:donut_text_size="12sp"
            custom:donut_progress="30" />

        <ImageView
            android:id="@+id/poster_new_image_view"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_gravity="right|top"
            android:scaleType="fitXY"
            android:src="@drawable/new_poster" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgStar1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/star"
                android:tint="#fff" />

            <ImageView
                android:id="@+id/imgStar2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/star"
                android:tint="#fff" />


            <ImageView
                android:id="@+id/imgStar3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/star"
                android:tint="#fff" />


            <ImageView
                android:id="@+id/imgStar4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/star"
                android:tint="#fff" />


            <ImageView
                android:id="@+id/imgStar5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/star"
                android:tint="#fff" />

        </LinearLayout>

        <com.one.two.three.poster.front.components.CustomTextView
            android:id="@+id/txtPosterPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:textColor="#fff"
            android:textSize="9sp" />

    </LinearLayout>

</LinearLayout>