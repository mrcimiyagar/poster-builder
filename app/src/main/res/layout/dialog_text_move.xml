<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorMoveTextDialogBackground"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgMoveTop"
        android:src="@drawable/ic_triangle"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="52dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgMoveLeft"
            android:src="@drawable/ic_triangle"
            android:rotation="-90"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="32dp"
            android:layout_width="48dp"
            android:layout_height="52dp" />

        <LinearLayout
            android:gravity="center_horizontal"
            android:background="@color/colorMoveTextDialogAlign"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="64dp">

            <LinearLayout
                android:id="@+id/layoutHorizontalAlign"
                android:layout_marginRight="32dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_align_arrow"
                    android:layout_width="11dp"
                    android:layout_height="11dp" />

                <com.one.two.three.poster.front.components.CustomTextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorSaveDialogBackground"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="@string/center" />

                <ImageView
                    android:rotation="180"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_align_arrow"
                    android:layout_width="11dp"
                    android:layout_height="11dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutVerticalAlign"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="48dp"
                android:layout_height="match_parent">

                <ImageView
                    android:rotation="90"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_align_arrow"
                    android:layout_width="11dp"
                    android:layout_height="11dp" />

                <com.one.two.three.poster.front.components.CustomTextView
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSaveDialogBackground"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="@string/center" />

                <ImageView
                    android:rotation="-90"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_align_arrow"
                    android:layout_width="11dp"
                    android:layout_height="11dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgMoveRight"
            android:rotation="90"
            android:src="@drawable/ic_triangle"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="2dp"
            android:layout_width="48dp"
            android:layout_height="52dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgMoveBottom"
        android:layout_gravity="center_horizontal"
        android:rotation="180"
        android:src="@drawable/ic_triangle"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_width="52dp"
        android:layout_height="48dp" />

</LinearLayout>